@using Web.ViewModel
@model AirportViewModel

@{
    ViewBag.Title = "Delete " + @Model.Name;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            @Html.Partial("_SideBar")
        </div>
        <div class="col-md-10" id="bodycontent">
            <div class="row">
                <div class="alert alert-danger col-md-3 deleteAlertText">
                    <h4 class="deleteAlertText">Are you sure you want to delete this?</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <h4>@Model.Name airport</h4>
                    <hr />
                </div>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="col-md-offset-0 col-md-10">
                            <input type="submit" value="Confirm" class="btn btn-danger" />
                            @Ajax.ActionLink("Cancel", "AirportEdit", "Classifiers", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "bodycontent" }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
