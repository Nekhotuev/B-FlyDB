@using Web.ViewModel
@model AirportViewModel

@{
    ViewBag.Title = "Delete " + @Model.Name;
}

<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger col-md-offset-0 col-md-12">
                    <h4>Are you sure you want to delete this?</h4>
                </div>
                <div class="col-md-offset-0 col-md-12">
                    <h4>@Model.Name airport</h4>
                    <hr />
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="col-md-offset-0 col-md-10">
                            <input type="submit" value="Confirm" class="btn btn-danger" />
                            <input type="button" value="Cancel" class="btn btn-default" onclick="location.href = '@Url.Action("AirportEdit", "Classifiers", new {id = Model.Id})'" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>