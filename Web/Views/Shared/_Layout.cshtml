<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BFly</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("BFly", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Find a flight", "Index", "Home")</li>
                <li>@Html.ActionLink("Register on flight", "Index", "Home")</li>
                <li>@Html.ActionLink("Prepare to trip", "Index", "Home")</li>
                @*use identity to hide lements if not admin login*@
                <li>@Html.ActionLink("Airport", "Index", "Airports")</li>
                <li>@Html.ActionLink("City | country", "Index", "Home")</li>
                <li>@Html.ActionLink("Plane", "Index", "Home")</li>
                <li>@Html.ActionLink("Flight | timetable", "Index", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container">
    <div class="body-content">
        @RenderBody()
    </div>
</div>
<div class="container">
    <footer class="well" style="bottom: 0; position:fixed;">
        <div class="container-fluid text-center text-md-left">
            <div class="row">
                <div class="col-md-6 mt-md-0 mt-3">
                    <h5 class="text-center">BFly - we provide the best service for you!</h5>
                    <p style="position: center">Here you can find useful information how to prepre to flight, what can you bring on board, information about luggage.</p>
                    <p>Contast us if you have any problems or would like to cancel your reservation.</p>
                </div>
                <div class="col-md-3 mb-md-0 mb-3">
                    <h5 class="text-uppercase">Information</h5>
                    <ul class="list-unstyled">
                        <li>@Html.ActionLink("Before flight", "Index", "Home")</li>
                        <li>@Html.ActionLink("On board", "Index", "Home")</li>
                        <li>@Html.ActionLink("In airport", "Index", "Home")</li>
                    </ul>
                </div>
                <div class="col-md-3 mb-md-0 mb-3">
                    <h5 class="text-uppercase">For clients</h5>
                    <ul class="list-unstyled">
                        <li>@Html.ActionLink("Register on flight", "Index", "Home")</li>
                        <li>@Html.ActionLink("News", "Index", "Home")</li>
                        <li>@Html.ActionLink("Contacts", "Index", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright text-center">
            <hr style="color:black"/>
            <p>&copy; @DateTime.Now.Year - BFly. All rights reserved.</p>
        </div>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
